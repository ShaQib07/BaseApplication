<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.shakib.baseapplication.presentation.game.GameFragment"
        android:label="All Games"
        tools:layout="@layout/fragment_game">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.shakib.baseapplication.presentation.game.FavoriteFragment"
        android:label="Favorite Games"
        tools:layout="@layout/fragment_favorite">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/rxFragment"
        android:name="com.shakib.baseapplication.presentation.rx.RxFragment"
        android:label="Rx Fragment"
        tools:layout="@layout/fragment_rx">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/flowFragment"
        android:name="com.shakib.baseapplication.presentation.flow.FlowFragment"
        android:label="Flow Fragment"
        tools:layout="@layout/fragment_flow">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/toolbarFragment"
        android:name="com.shakib.baseapplication.presentation.ToolbarFragment"
        android:label="Toolbar Fragment"
        tools:layout="@layout/fragment_toolbar">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/menuItemFragment"
        android:name="com.shakib.baseapplication.presentation.MenuItemFragment"
        android:label="Menu Item Fragment"
        tools:layout="@layout/fragment_menu_item">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <dialog
        android:id="@+id/simpleDialog"
        android:name="com.shakib.baseapplication.presentation.dialog.SimpleDialog"
        android:label="SimpleDialog">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="message"
            app:argType="string"
            app:nullable="true" />
    </dialog>

    <dialog
        android:id="@+id/progressDialog"
        android:name="com.shakib.baseapplication.presentation.dialog.ProgressDialog"
        android:label="ProgressDialog" />


    <action
        android:id="@+id/mainToToolbar"
        app:destination="@id/toolbarFragment" />

    <action
        android:id="@+id/mainToMenuItem"
        app:destination="@id/menuItemFragment" />

    <action
        android:id="@+id/mainToRx"
        app:destination="@id/rxFragment" />

    <action
        android:id="@+id/mainToFlow"
        app:destination="@id/flowFragment" />

    <action
        android:id="@+id/toolbarToDialog"
        app:destination="@id/simpleDialog" />

    <action
        android:id="@+id/showProgress"
        app:destination="@id/progressDialog" />

</navigation>